{
  "name": "vannabi",
  "version": "0.0.1",
  "description": "Vannabi.in Web App",
  "main": "firebaseFunctions.js",
  "engines": {
    "node": "10"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vannabi/webapp.git"
  },
  "scripts": {
    "clean": "rm -rf .next && rm -rf out",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest",
    "dev": "next src/",
    "build": "next build src/",
    "start": "next start src/",
    "serve": "NODE_ENV=production npm run build && NODE_ENV=production firebase emulators:start",
    "shell": "NODE_ENV=production npm run build && NODE_ENV=production firebase functions:shell",
    "deploy": "NODE_ENV=production firebase deploy --only functions,hosting",
    "logs": "firebase functions:log",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare"
  },
  "author": {
    "name": "Gleb Galkin",
    "email": "me@artdaw.com",
    "url": "https://artdaw.com"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "@material-ui/core": "latest",
    "@material-ui/icons": "^4.9.1",
    "clsx": "latest",
    "firebase": "^7.16.1",
    "next": "^9.4.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "firebase-functions": "^3.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^14.0.5",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "commitizen": "^4.1.2",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.3",
    "firebase-admin": "^8.12.1",
    "firebase-functions-test": "^0.2.1",
    "firebase-tools": "^8.6.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
